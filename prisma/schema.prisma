generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Ponto {
  id Int @id @default(autoincrement())
  endereco String
  coordenadaX String
  coordenadaY String
  caixa Float
  tickets Ticket[]
  relatoriosFaturamento RelatorioFaturamento[]
}

model Ticket {
  id Int @id @default(autoincrement())
  ponto Ponto @relation(fields: [pontoId], references: [id])
  pontoId Int
  valor Float
  datahora DateTime
  datahoralimite DateTime
  minutos Int
}

model RelatorioFaturamento {
  id Int @id @default(autoincrement())
  Ponto Ponto @relation(fields: [pontoId], references: [id])
  pontoId Int
  dataInicio DateTime
  dataFim DateTime
  total Float
}
  
