generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:teste@localhost:3306/estacionaai"
}

enum Role {
  admin
  costumer
} 

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  cpf String @unique
  phoneNumber String
  address String  
  role Role
  vehicles Vehicle[] 
}

model Vehicle {
  id Int @id @default(autoincrement())
  licensePlate String
  color String
  model String
  brand String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Point {
  id Int @id @default(autoincrement())
  Xpos String
  Ypos String
  address String
  cashier Float
  tickets Ticket[]
}

model Ticket {
  id Int @id @default(autoincrement())
  point Point @relation(fields: [pointId], references: [id])
  pointId Int
  value Float
  datetime DateTime
  expiration DateTime
  minutes Int
}
  
